<div class="modal fade" tabindex="-1" id="hotkeys-modal" aria-labelledby="hotkeys-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h1 id="hotkeys-modal-title" class="modal-title">Hotkeys</h1>
                <button type="button" class="btn btn-outline-secondary btn-sm focus-ring" data-bs-dismiss="modal" aria-label="Close">
                    <svg class="bi" aria-hidden="true"><use xlink:href="#x-lg"></use></svg>
                </button>
            </div>
            <div class="modal-body col-count-2">
                <ul class="list-group list-group-flush w-75 d-inline-flex mt-4">
                    <li class="list-group-item">
                        <h2>Formatting</h3>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Bold</div>
                        </div>
                        <span><kbd>ctrl</kbd> + <kbd>B</kbd></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold"><u>Underline</u></div>
                        </div>
                        <span><kbd>ctrl</kbd> + <kbd>U</kbd></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold"><i>Italics</i></div>
                        </div>
                        <span><kbd>ctrl</kbd> + <kbd>I</kbd></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold"><s>Strikethrough</s></div>
                        </div>
                        <span><kbd>ctrl</kbd> + <kbd>shift</kbd> + <kbd>X</kbd></span>
                    </li>
                </ul>
                
                <ul class="list-group list-group-flush w-75 d-inline-flex mt-4">
                    <li class="list-group-item">
                        <h2>Tools</h3>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Find and Replace</div>
                        </div>
                        <span><kbd>ctrl</kbd> + <kbd>F</kbd></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Insert Link</div>
                        </div>
                        <span><kbd>ctrl</kbd> + <kbd>K</kbd></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Insert Table</div>
                        </div>
                        <span><kbd>ctrl</kbd> + <kbd>T</kbd></span>
                    </li>
                </ul>

                <ul class="list-group list-group-flush w-75 d-inline-flex mt-4">
                    <li class="list-group-item">
                        <h2>Editting</h3>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Check/Uncheck Checkbox</div>
                        </div>
                        <span><kbd>ctrl</kbd> + <kbd>enter</kbd></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Remove Formatting</div>
                        </div>
                        <span><kbd>ctrl</kbd> + <kbd>L</kbd></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Cycle Alignment</div>
                        </div>
                        <span><kbd>alt</kbd> + <kbd>←</kbd> / <kbd>→</kbd></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
